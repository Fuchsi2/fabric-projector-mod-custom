{
  "schemaVersion": 1,
  "id": "projector",
  "version": "${version}",

  "name": "Projector",
  "description": "Projector mod allows you to load images from the internet and set them to blocks",
  "authors": [
    "Nic Jackson",
    "Erik (PEBKAC) Veld"
  ],
  "contact": {
    "homepage": "https://hashicraft.com/",
    "sources": "https://github.com/hashicraft/fabric-projector-mod"
  },

  "license": "CC0-1.0",
  "icon": "assets/projector/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.github.hashicraft.projector.ProjectorMod"
    ],
    "client":[
      "com.github.hashicraft.projector.ProjectorModClient"
    ]
  },
  "mixins": [
    "projector.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.11.3",
    "fabric": "*",
    "minecraft": "1.18.x",
    "java": ">=16"
  }
}